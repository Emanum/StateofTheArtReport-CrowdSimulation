	booktitle = {Proceedings of the 2007 {ACM} {SIGGRAPH}/{Eurographics} symposium on {Computer} animation},
	publisher = {Eurographics Association},
	author = {Pelechano, N. and Allbeck, J. M. and Badler, N. I.},
	month = aug,
	year = {2007},
	pages = {99--108}
}

