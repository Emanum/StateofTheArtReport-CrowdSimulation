	number = {2},
	urldate = {2020-03-28},
	journal = {IEEE Transactions on Visualization and Computer Graphics},
	author = {Musse, S.R. and Thalmann, D.},
	month = jun,
	year = {2001},
	pages = {152--164}
}

@article{helbing_social_1995,
